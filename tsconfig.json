{
  "compilerOptions": {
    "incremental": true, 
    "target": "es2017", 
    "experimentalDecorators": true,                   
    "module": "commonjs", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "strictNullChecks": false,                         
    "skipLibCheck": true,
    "baseUrl": "./src", 
    "paths": {
      "#seedwork/*": [
        "./@seedwork/*"
      ],
      "#category/*": [
        "./category/*"
      ]
    },
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./src/"
  ]
}